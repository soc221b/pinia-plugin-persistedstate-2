{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "ignorePaths": ["**/node_modules/**"],
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "rangeStrategy": "pin"
    },
    {
      "matchDepTypes": ["engines", "peerDependencies"],
      "rangeStrategy": "auto"
    }
  ],
  "extends": ["config:recommended"]
}
